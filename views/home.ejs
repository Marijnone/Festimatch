<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="css/main.css">
  <title>Festimatch</title>
</head>

<body>
  <header>
    <h1>Festimatch 🎉</h1>
  </header>

  <div class="card">
      <div class="card-header">
        
      </div>
      <div class="card-content">
        <h3>Matchmaker</h3>

        <p>Hier staan jouw matches </p>
        <div class="card-footer">
          <button class="match">Meer matches zoeken</button>
        </div>
      </div>
    </div>

  <section class="matches">
    <% data.forEach(function(entity) { %>
    <div class="card">
      <div class="card-header">
          <img src="/uploads/<%= entity.id %>.jpg" alt="">
          
      </div>
      <div class="card-content">
        <h3><%= entity.username %></h3>
        <h4>Favoriete festival <%= entity.festival %> 📍</h4>
        <h4>Geslacht: <%= entity.geslacht %></h4>
        <h4>Ik ben een <%= entity.voorkeur1 %></h4>
        <h4>Opzoek naar een <%= entity.opzoeknaar %></h4>

        
        <div class="card-footer">
        <button class="chat"> <a href="mailto:marijn-m@hotmail.com"> chat</a></button>
        <button class="profile">  <a href="/<%= entity.id %>">profiel</a></button>
      </div>
      </div>
     
    </div>
    <% }) %>






  </section>
  <div class="tabbar">
    <div class="tab-matchmaker">
      <a href="#"><p>Matchmaker</p> </a>
    </div>
    <div class="tab-chats">
     <a href="#"> <p>Chats</p></a>
    </div>
    <div class="tab-account">
   <a href="/profile">  <p>Settings & Profiel</p></a> 
    </div>
    <div class="tab-logout">
      <a href="/logout"><p>log uit</p></a> 
  </div>
</body>

</html>